{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Images</h1>

    <table class="record_properties">
        <tbody>

            <img src="{{ app.request.basepath }}/uploads/{{ entity.photo }}">

            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('images') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('images_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
